{
  "name": "react-markdown-table-ts",
  "version": "1.3.9",
  "description": "A React component that converts structured data into formatted Markdown table syntax and displays it in a styled code block with optional line numbers.",
  "keywords": [
    "markdown",
    "md",
    "table",
    "tables",
    "react",
    "generate",
    "generator",
    "convert",
    "converter"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "src/index.ts",
    "**/*.css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keithwalsh/react-markdown-table-ts.git"
  },
  "homepage": "https://github.com/keithwalsh/react-markdown-table-ts#readme",
  "bugs": {
    "url": "https://github.com/keithwalsh/react-markdown-table-ts/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@storybook/react-vite": "^9.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.6.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "storybook": "^9.1.10",
    "ts-jest": "^29.2.5",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  }
}
